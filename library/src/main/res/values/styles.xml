<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="EasyRecyclerView">
        <attr name="load_more" format="reference"/>
        <attr name="layout_type" format="enum">
            <enum name="VERTICAL" value="0"/>
            <enum name="HORIZONTAL" value="1"/>
            <enum name="VGRID2" value="2"/>
            <enum name="VGRID3" value="3"/>
            <enum name="VGRID4" value="4"/>
            <enum name="HGRID2" value="5"/>
            <enum name="HGRID3" value="6"/>
            <enum name="HGRID4" value="7"/>
        </attr>
        <attr name="item_space" format="dimension"/>
        <attr name="include_edge_space" format="boolean"/>
        <attr name="draggable" format="boolean"/>
    </declare-styleable>
</resources>